<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.synsoft.managewallet">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddExpenditureActivity"
            android:label="@string/title_activity_add_expenditure"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddCategoryActivity"
            android:label="@string/title_activity_add_category"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SettingActivity"
            android:label="@string/title_activity_setting"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CurrencyActivity"
            android:label="@string/title_activity_currency"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddExpenditureTypeActivity"
            android:label="@string/title_activity_add_expenditure_type"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>